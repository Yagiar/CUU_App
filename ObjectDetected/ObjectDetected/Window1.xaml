<Window x:Class="ObjectDetected.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ObjectDetected"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Авторизация" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
            <StackPanel Margin="0,10,0,5">
                <Label Content="Логин"/>
                <TextBox x:Name="txtUsername"/>
            </StackPanel>
            <StackPanel Margin="0,5,0,5">
                <Label Content="Пароль"/>
                <PasswordBox x:Name="txtPassword"/>
            </StackPanel>
            <Button Content="Войти" Click="Login_Click" HorizontalAlignment="Center" Margin="0,15,0,0"/>
            <Button Content="Регистрация" Click="Reg_Click" HorizontalAlignment="Center" Margin="0,15,0,0"/>
        </StackPanel>
    </Grid>
</Window>
